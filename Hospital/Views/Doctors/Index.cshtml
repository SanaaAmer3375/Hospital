@model IEnumerable<Doctor>
@using System.Globalization

<h1 style="text-align:center; font-family: 'Arial', sans-serif;">
	Doctors
</h1>

<a asp-controller="Doctors" asp-action="GetcreateView" class="btn btn-success">Create New</a>

@if (Model.Count() > 0)
{
				<form method = "get" asp-controller="Doctors" asp-action="GetIndexView" class="col-3 mb-3" >
					<div class = "mt-3 input-group">
							<input name = "search" value = "@ViewBag.SearchText" class = "form-control"/>
							<button type = "submit" class = "input-group-append btn btn-secondary">
							<i class = "bi bi-search"></i>
							</button>
					</div>
				</form>


				<table class = "table table-bordered table-striped table-hover caption-top text-center">
				<thead>
					<tr>
						<th>@Html.DisplayNameFor(e => e.Id)</th>
							<th>@Html.DisplayNameFor(e => e.FullName)</th>
							<th>@Html.DisplayNameFor(e => e.AttendanceTime)</th>
							<th>@Html.DisplayNameFor(e => e.PhoneNumber)</th>
							<th>@Html.DisplayNameFor(e => e.ImageFile)</th>

						<th></th>
					</tr>
				</thead>
				<tbody>
			@foreach (var emp in Model)
			{
								<tr>
									<td>@emp.Id</td>
									<td>@emp.FullName</td>
									<td>@emp.AttendanceTime</td>
									<td>@emp.PhoneNumber</td>
									<td><img src="@emp.ImagePath"/></td>
									<td>
										<a asp-controller="Doctors" 
										asp-action="GetDetailsView" 
										asp-route-id="@emp.Id" 
										Class = "btn btn-success" 
										style = "text-decoration: none" 
										title = "Details">
										<i class="bi bi-list-ul"></i>
										</a>  |  

										<a asp-controller="Doctors" 
										asp-action="GetEditView" 
										asp-route-id="@emp.Id"
										Class = "btn btn-primary" 
										style = "text-decoration: none" 
										title = "Edit">
										<i class="bi bi-pencil-square"></i>
										</a>  |  
										<a asp-controller="Doctors" 
										asp-action="GetDeleteView" 
										asp-route-id="@emp.Id"
										Class = "btn btn-danger" 
										style = "text-decoration: none" 
										title = "Delete">
										<i class="bi bi-trash-fill"></i>
										</a>
									</td>
								</tr>
			}
				</tbody>
				<tfoot>
					<th></th>
				</tfoot>
			</table>
}
else
{
				<h1 class = "alert alert-danger text-center">There is No Doctors</h1>
}

<div style="height: 200px;"></div>


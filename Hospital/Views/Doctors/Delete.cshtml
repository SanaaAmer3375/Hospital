@model Doctor
@using System.Globalization

<h1 class="alert alert-danger text-center" style="color: darkred">
    Are you sure you want to delete this Doctor?
</h1>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-2">Id</dt><dd class="col-10">@Model.Id</dd>
            <dt class="col-2">FullName</dt><dd class="col-10">@Model.FullName</dd>
            <dt class="col-2">NationalId</dt><dd class="col-10">@Model.NationalId</dd>
            <dt class="col-2">Address</dt><dd class="col-10">@Model.Address</dd>
            <dt class="col-2">AttendanceTime</dt><dd class="col-10">@Model.AttendanceTime</dd>
            <dt class="col-2">PhoneNumber</dt><dd class="col-10">@Model.PhoneNumber</dd>
        </dl>

        @if (Model.Patients.Count() > 0)
        {
                        <ul class="list-group text-center col-4">
                            <li class="list-group-item active border">Patients</li>
                @foreach (var patient in Model.Patients)
                {
                                            <li class="list-group-item list-group-item-action">@patient.FullName</li>
                }
                        </ul>
        }
        else
        {
                        <h1 class="alert alert-danger text-center col-4" style="color: darkred">There are no Patients.</h1>
        }

        <form method="post" asp-controller="Patients" asp-action="DeleteCurrent" class="col-4 mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger col-12">Delete</button>
        </form>

        <a asp-controller="Patients" asp-action="GetIndexView" class="d-block mt-3">Back to List</a>
    </div>

    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <img src="@Model.ImagePath" style="width: 100%; aspect-ratio: 1/1;" class="card" />
    </div>
</div>

<div style="height: 200px;"></div>
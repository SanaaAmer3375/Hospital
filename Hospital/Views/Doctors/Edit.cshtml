@model Doctor
<h1 style="text-align:center; font-family: 'Arial', sans-serif;">Edit Doctor</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Doctors" asp-action="EditCurrent" enctype="multipart/form-data" class="col-6" >
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImagePath" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <label asp-for="FullName" class="form-label"></label>
                <input type="text" asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="NationalId" class="form-label"></label>
                <input type="text" asp-for="NationalId" class="form-control" />
                <span asp-validation-for="NationalId" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Address" class="form-label"></label>
                <input type="text" asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="AttendanceTime" class="form-label"></label>
                <input asp-for="AttendanceTime" class="form-control" />
                <span asp-validation-for="AttendanceTime" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="ImageFile" class="form-label"></label>
                <input type="file" name="imageFile" id="imageFile" accept=".png,.jpg" class="form-control" onchange="AddImage()" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary col-12">Edit</button>
                <a asp-controller="Patients" asp-action="GetIndexView" class="d-block mt-2">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-6 d-flex align-items-center justify-content-center">
        <img src="" id="empImage" style="width: 50%; aspect-ratio: 1/1;" class="card" />
    </div>
</div>

@section Scripts {
            <script>
                function AddImage(){
                    document.getElementById("empImage").src = window.URL.createObjectURL(document.getElementById("imageFile").files[0]);
                }
            </script>
}

<div style="height: 200px;"></div>

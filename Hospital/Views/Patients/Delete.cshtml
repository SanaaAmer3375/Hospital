@model Patient
@using System.Globalization

<h1 class ="alert alert-danger text-center" style= "color: darkred">
	Are you sure you want to delete this Patient?
</h1>

<dl class = "row">
	<dt class = "col-2">Id</dt><dd class = "col-10">@Model.Id</dd>
	<dt class = "col-2">FullName</dt><dd class = "col-10">@Model.FullName</dd>
	<dt class = "col-2">NationalId</dt><dd class = "col-10">@Model.NationalId</dd>
	<dt class = "col-2">Address</dt><dd class = "col-10">@Model.Address</dd>
	<dt class = "col-2">DateOfEntry</dt><dd class = "col-10">@Model.DateOfEntry</dd>
	<dt class = "col-2">BirthDate</dt><dd class = "col-10">@Model.BirthDate</dd>
	<dt class = "col-2">PhoneNumber</dt><dd class = "col-10">@Model.PhoneNumber</dd>
	<dt class="col-2">Doctor</dt><dd class="col-10">@Model.Doctor.FullName</dd>
	<dt class = "col-2">Comments</dt><dd class = "col-10">@Model.Comments</dd>

</dl>

<form method = "post" asp-controller="Patients" asp-action="DeleteCurrent">
	<input  type="hidden" asp-for="Id"/>
	<button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-controller="Patients" asp-action="GetIndexView" class="d-block mt-2">Back to List</a>
<div style="height: 200px;"></div>

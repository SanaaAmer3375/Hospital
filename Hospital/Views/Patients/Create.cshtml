@model Patient

<h1 style="text-align:center; font-family: 'Arial', sans-serif;">Create Patient</h1>

<div row>
    <div class="col-6">
        <form method="post" asp-controller="Patients" asp-action="AddNew" class="col-6" enctype="multipart/form-data">
             <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mt-3">
                <label asp-for="FullName" class="form-label"></label>
                <input type="text" asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="NationalId" class="form-label"></label>
                <input type="text" asp-for="NationalId" class="form-control" />
                <span asp-validation-for="NationalId" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Address" class="form-label"></label>
                <input type="text" asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="DateOfEntry" class="form-label"></label>
                <input asp-for="DateOfEntry" class="form-control" />
                <span asp-validation-for="DateOfEntry" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input type="text" asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Comments" class="form-label"></label>
                <input type="text" asp-for="Comments" class="form-control" />
            </div>

            <div class="mt-3">
                <label asp-for="DoctorId" class="form-label"></label>
                <select class="form-control" asp-for="DoctorId" asp-items="@(new SelectList(ViewBag.AllDoctors, "Id", "FullName"))">
                    <option selected disabled value="0">Select a Doctor...</option>
                </select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary col-12 mb-2">Add</button>
                <a asp-controller="Patients" asp-action="GetIndexView" class="d-block mt-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div style="height: 200px;"></div>

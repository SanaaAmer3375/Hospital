@model IEnumerable<Patient>
@using System.Globalization

<h1 style="text-align:center; font-family: 'Arial', sans-serif;">
    Patients
</h1>

<a asp-controller="Patients" asp-action="GetcreateView" class="btn btn-success">Create New</a>

@if (Model.Count() > 0)
{
            <form method="get" asp-controller="Patients" asp-action="GetIndexView" class="col-3 mb-3">
                <div class="mt-3 input-group">
                    <input name="search" value="@ViewBag.SearchText" class="form-control" />
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>

            <table class="table table-bordered table-striped table-hover text-center">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(e => e.Id)</th>
                        <th>@Html.DisplayNameFor(e => e.FullName)</th>
                        <th>@Html.DisplayNameFor(e => e.DateOfEntry)</th>
                        <th>@Html.DisplayNameFor(e => e.PhoneNumber)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var P in Model)
            {
                                <tr>
                                    <td>@P.Id</td>
                                    <td>@P.FullName</td>
                                    <td>@P.DateOfEntry</td>
                                    <td>@P.PhoneNumber</td>
                                    <td>
                                        <a asp-controller="Patients" 
                                           asp-action="GetDetailsView" 
                                           asp-route-id="@P.Id" 
                                           class="btn btn-success" 
                                           style="text-decoration: none" 
                                           title="Details">
                                            <i class="bi bi-list-ul"></i>
                                        </a> | 
                                        <a asp-controller="Patients" 
                                           asp-action="GetEditView" 
                                           asp-route-id="@P.Id" 
                                           class="btn btn-primary" 
                                           style="text-decoration: none" 
                                           title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a> | 
                                        <a asp-controller="Patients" 
                                           asp-action="GetDeleteView" 
                                           asp-route-id="@P.Id" 
                                           class="btn btn-danger" 
                                           style="text-decoration: none" 
                                           title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </td>
                                </tr>
            }
                </tbody>
            </table>
}
else
{
            <h1 class="alert alert-danger text-center">There are No Patients</h1>
}
<div style="height: 200px;"></div>
